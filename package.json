{
  "name": "iobroker.ring",
  "version": "3.3.0",
  "description": "Ring",
  "author": {
    "name": "Thiemo Hoffmann",
    "email": "thiemo.hoffmann@web.de"
  },
  "contributors": [
    {
      "name": "Thorsten Stueben",
      "email": "thorsten@stueben.de"
    },
    {
      "name": "Thiemo Hoffmann",
      "email": "thiemo.hoffmann@web.de"
    }
  ],
  "homepage": "https://github.com/iobroker-community-adapters/ioBroker.ring",
  "license": "MIT",
  "keywords": [
    "ring",
    "ioBroker",
    "template",
    "Smart Home",
    "home automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/iobroker-community-adapters/ioBroker.ring"
  },
  "dependencies": {
    "ring-client-api": "^11.7.5",
    "@iobroker/adapter-core": "^2.6.8"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.5.9",
    "@alcalzone/release-script-plugin-iobroker": "^3.5.9",
    "@alcalzone/release-script-plugin-license": "^3.5.9",
    "@iobroker/testing": "^4.1.0",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/gulp": "^4.0.10",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.16.3",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.14",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.2",
    "axios": "^1.4.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.40.0",
    "gulp": "^4.0.2",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^4.4.1",
    "sinon": "^15.0.4",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "main": "build/main.js",
  "files": [
    "admin/",
    "build/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "dev:run": "dev-server run",
    "dev:upload": "dev-server upload",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "check-package-upgrades": "npx npm-check-updates -i",
    "coverage": "nyc npm run test:ts",
    "lint": "eslint --ext .ts src/",
    "release": "release-script",
    "release-patch": "release-script patch --yes",
    "release-minor": "release-script minor --yes",
    "release-major": "release-script major --yes"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "engines": {
    "node": ">=16"
  },
  "bugs": {
    "url": "https://github.com/iobroker-community-adapters/ioBroker.ring/issues"
  },
  "readmeFilename": "README.md"
}
