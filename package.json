  },
  "contributors": [
    {
      "name": "Thorsten Stueben",
      "email": "thorsten@stueben.de"
    },
    {
      "name": "Thiemo Hoffmann",
      "email": "thiemo.hoffmann@web.de"
    }
  ],
  "homepage": "https://github.com/iobroker-community-adapters/ioBroker.ring",
  "license": "MIT",
  "keywords": [
    "ring",
    "ioBroker",
    "template",
    "Smart Home",
    "home automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/iobroker-community-adapters/ioBroker.ring"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@homebridge/camera-utils": "^3.0.0",
    "@iobroker/adapter-core": "^3.2.3",
    "@iobroker/types": "^7.0.7",
    "@types/suncalc": "^1.9.2",
    "ffmpeg-static": "^5.2.0",
    "node-schedule": "^2.1.1",
    "ring-client-api": "^14.2.0",
    "rxjs": "^7.8.2",
    "sharp": "^0.34.3",
    "strftime": "^0.10.3",
    "suncalc": "^1.9.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/testing": "^5.0.4",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^8.0.2",
    "@types/ffmpeg-static": "^5.1.0",
    "@types/gulp": "^4.0.18",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.1.0",
    "@types/node-schedule": "^2.1.8",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^4.0.0",
    "@types/strftime": "^0.9.8",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.18.0",
    "axios": "^1.13.2",
    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.1",
    "eslint": "^8.57.1",
    "gulp": "^5.0.1",
    "mocha": "^10.8.2",
    "nyc": "^17.1.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.1.2",
    "sinon": "^18.0.0",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "main": "build/main.js",
  "files": [
    "admin/",
    "build/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf ./build",
    "build:ts": "tsc -p tsconfig.build.json",
    "build": "npm run build:ts",
    "watch:ts": "tsc -p tsconfig.build.json --watch",
    "watch": "npm run watch:ts",
    "dev:run": "dev-server run",
    "dev:upload": "dev-server upload",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run lint && npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "check-package-upgrades": "npx npm-check-updates -i",
    "coverage": "nyc npm run test:ts",
    "lint": "eslint src/**/*.ts",
    "release": "release-script",
    "release-patch": "release-script patch --yes",
    "release-minor": "release-script minor --yes",
    "release-major": "release-script major --yes",
    "translate": "gulp translateAndUpdateWordsJS"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/iobroker-community-adapters/ioBroker.ring/issues"
  },
  "readmeFilename": "README.md"
}
